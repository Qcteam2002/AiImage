DB_USER=admin
DB_PASSWORD=admin123
DB_NAME=aiimage

# Redis Configuration (Updated ports to avoid conflicts)
REDIS_HOST=localhost
REDIS_PORT=6391

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
